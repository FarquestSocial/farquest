{
  "name": "farquest",
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "biome": "^0.3.3",
    "lefthook": "^1.6.10",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.1.7",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "check": "bunx biome check apps/**/src --apply && bunx biome check packages/**/src --apply",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "trustedDependencies": [
    "@prisma/client",
    "@prisma/engines",
    "bufferutil",
    "canvas",
    "core-js",
    "esbuild",
    "keccak",
    "lefthook",
    "prisma",
    "secp256k1",
    "sharp",
    "utf-8-validate"
  ],
  "workspaces": ["apps/*", "packages/*"]
}
